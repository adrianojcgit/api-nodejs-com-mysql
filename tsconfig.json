{
  "compilerOptions": {
  "target": "es2016",                                  
  "module": "commonjs",   
  "outDir": "./dist",			//<-- Gerar arquivos compilados de TypeScript p/ javascript
	"rootDir": "./src",			//<-- Arquivos do projeto                             
  "esModuleInterop": true,                             
  "forceConsistentCasingInFileNames": true,            
  "strict": true,                                      
  "skipLibCheck": true,
  "emitDecoratorMetadata": true,
	"experimentalDecorators": true,
	"resolveJsonModule": true                                 
  }
}
